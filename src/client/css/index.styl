@require './basic'
html, body
  width 100%
  height 100%
  padding 0
  margin 0

.wrap
  max-width 612px
  margin 20px auto 20px 10px
  padding 10px
  position relative
  z-index 2
  background #fff
#pbg
  position fixed
  left 0
  top 0
  z-index 1
  right 0
  bottom 0
.setting-box
  width 592px

.iframe-wrap
  border 1px dashed #999
  width 592px
  padding 10px
  iframe
    width 570px
    height 260px
.team-select
  width 240px
.common-link
  cursor pointer
  color #08c
  &:hover
    color #00c